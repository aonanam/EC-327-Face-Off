<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Player2Defense"
    android:background="@drawable/player_defense_background" >

    <TextView
        android:id="@+id/player_2_defense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Player 2 Defense"
        android:textSize="50dp"
        android:textColor="#ffffff" />
    
    <TextView
        android:id="@+id/instructions_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/jpgview_p1_offense"
        android:text="Player 2, it's your turn to try to match Player 1's offense face !"
        android:textSize="20dp" />
    
    <TextView
        android:id="@+id/instructions_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/instructions_1"
        android:text="*Note: Taking a picture with your face centered and straight will award you more points"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/submit_defense_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instructions_2"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:onClick="cameraPress"
        android:src="@drawable/submit_defense_button" />

    <ImageView
        android:id="@+id/jpgview_p1_offense"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@+id/player_2_defense"
        android:layout_centerHorizontal="true"
        android:src="@android:drawable/ic_menu_gallery" />

</RelativeLayout>
