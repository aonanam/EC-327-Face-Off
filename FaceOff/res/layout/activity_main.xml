<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:src="@drawable/face_off_logo" />

    <ImageButton
        android:id="@+id/tut_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/single_phone_button"
        android:layout_below="@+id/logo"
        android:layout_marginTop="85dp"
        android:background="@android:color/transparent"
        android:onClick="activity_tutorial"
        android:src="@drawable/tutorial_button" />

    <ImageButton
        android:id="@+id/single_phone_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Profile_button"
        android:layout_below="@+id/tut_button"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:onClick="activity_single_phone"
        android:src="@drawable/single_player_game_button" />

    <ImageButton
        android:id="@+id/Profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/single_phone_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:onClick="activity_create_profile"
        android:src="@drawable/create_profile_button" />

</RelativeLayout>